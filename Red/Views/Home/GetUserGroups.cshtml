@model IEnumerable<Common.UserGroup>

@{
    Layout = null;
}

<label>Available Groups/Roles: </label>
@Html.ListBox("userGroups", @Model.Select(g => new SelectListItem() { Text = g.Name, Value = g.Id.ToString() }))
@if (ViewBag.GetGroupsStatus != null && ViewBag.GetGroupsStatus != "") { 
    <label style="color:red;width:400px">@ViewBag.GetGroupsStatus</label>
}
